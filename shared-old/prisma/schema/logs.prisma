model AppLogs {
    source    String // API or JOB_QUEUE
    level     String // ERROR, WARN, LOG
    message   String
    stack     String?
    request   Json?
    id        String   @id @default(uuid())
    errorType String?
    createdAt DateTime @default(now())

    @@index([source, level])
    @@schema("applogs")
}
