model ApplicantInfo {
    amount  Float?
    term    Int?
    purpose String?

    // Required fields only
    fullName    String?
    cccdNumber  String?
    phoneNumber String?
    dateOfBirth DateTime?

    // Current Address
    currentAddress String?

    monthlyIncome Float @default(0)

    employmentType String?

    hasLaborContract Boolean?

    residencyStatus String?

    documents   Document[]
    applicantOf LoanRequest? @relation(name: "applicantInfo")
    guarantorOf LoanRequest? @relation(name: "guarantorInfo")

    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user    User?
    zohoCrm ZohoCrm?

    @@index([cccdNumber])
    @@index([phoneNumber])
    @@schema("public")
}

model ZohoCrm {
    id              String         @id @default(uuid())
    zohoId          String         @unique
    applicantInfoId String?        @unique
    applicantInfo   ApplicantInfo? @relation(fields: [applicantInfoId], references: [id])

    @@schema("public")
}
