model ApplicantInfo {
    amount  Float?
    term    Int?
    purpose String?

    // Required fields only
    fullName    String?
    cccdNumber  String?
    phoneNumber String?
    dateOfBirth DateTime?

    // Current Address
    currentAddress String?

    monthlyIncome Float @default(0)

    employmentType String?

    hasLaborContract Boolean?

    residencyStatus String?

    documents   Document[]
    applicantOf LoanRequest? @relation(name: "applicantInfo")
    guarantorOf LoanRequest? @relation(name: "guarantorInfo")

    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([cccdNumber])
    @@index([phoneNumber])
    @@schema("public")
}
